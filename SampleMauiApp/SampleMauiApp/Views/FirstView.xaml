<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleMauiApp.Views.FirstView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SampleMauiApp.ViewModels"
    Title="First Screen"
    x:DataType="vm:FirstViewModel">
    <VerticalStackLayout Spacing="20"
        Padding="20,0"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Entry Text="{Binding Username}" Placeholder="Enter Username"/>
        <Button Command="{Binding GoToSecondScreenCommand}" Text="Go to Second Screen" />
    </VerticalStackLayout>
</ContentPage>